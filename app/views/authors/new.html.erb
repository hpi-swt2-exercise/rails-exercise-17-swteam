<h1>New Author</h1>

<%= form_for :author, url: authors_path do |f| %>
  <p>
    <%= f.label :Author_first_name %><br>
    <%= f.text_field :Author_first_name %>
  </p>
 
  <p>
    <%= f.label :Author_last_name %><br>
    <%= f.text_area :Author_last_name %>
  </p>

  <p>
    <%= f.label :Author_homepage %><br>
    <%= f.text_area :Author_homepage %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
